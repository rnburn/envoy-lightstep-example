{
  "listeners": [
    {
      "address": {
        "socket_address": {
          "address": "0.0.0.0",
          "port_value": 8080
        }
      },
      "filters": [
        {
          "type": "read",
          "name": "http_connection_manager",
          "config": {
            "codec_type": "auto",
            "stat_prefix": "ingress_http",
            "tracing": {
              "operation_name": "ingress"
            },
            "route_config": {
              "virtual_hosts": [
                {
                  "name": "backend",
                  "domains": ["*"],
                  "routes": [
                    {
                      "timeout_ms": 0,
                      "prefix": "/",
                      "cluster": "service1"
                    }
                  ]
                }
              ]
            },
            "filters": [
              {
                "type": "decoder",
                "name": "router",
                "config": {}
              }
            ]
          }
        }
      ]
    }
  ],
  "tracing": {
    "http": {
      "driver": {
        "type": "lightstep",
        "config": {
          "access_token_file": "/app/access_token",
          "collector_cluster": "lightstep"
        }
      }
    }
  },
  "admin": {
    "access_log_path": "/dev/null",
    "address": {
      "socket_address": {
        "address": "0.0.0.0",
        "port_value": 8001
      }
    }
  },
  "cluster_manager": {
    "clusters": [
      {
        "name": "service1",
        "connect_timeout_ms": 250,
        "type": "strict_dns",
        "lb_type": "round_robin",
        "features": "http2",
        "hosts": [
          {
            "url": "tcp://0.0.0.0:9001",
            "url": "tcp://0.0.0.0:9002"
          }
        ]
      },
      {
        "name": "lightstep",
        "connect_timeout_ms": 1000,
        "type": "strict_dns",
        "lb_type": "round_robin",
        "features": "http2",
        "ssl_context": {
          "ca_cert_file": "/etc/ssl/certs/ca-certificates.crt",
          "verify_subject_alt_name": ["collector-grpc.lightstep.com"]
        },
        "hosts": [
          {
            "url": "tcp://collector-grpc.lightstep.com:443"
          }
        ]
      }
    ]
  }
}
